@using Arkitektum.Orden.Models.ViewModels
@model Arkitektum.Orden.Models.ViewModels.SectorViewModel


@{
    ViewData["Title"] = UIResource.Details;
}

<h2>@Model.Name</h2>
<hr/>
<h4>@ModelsResource.Applications</h4>
<ul>
    @foreach (var app in Model.Applications)
    {
        <li><a asp-action="Details" asp-controller="Applications" asp-route-id="@app.Id">@app.Name</a></li>
    }
</ul>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">@UIResource.Edit</a> |
    <a asp-action="Index">@UIResource.LinkBackToList</a>
</div>