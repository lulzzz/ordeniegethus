                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HasSensitivePersonalData" /> @Html.DisplayNameFor(model => model.HasSensitivePersonalData)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HasMasterData" /> @Html.DisplayNameFor(model => model.HasMasterData)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DataLocation" class="control-label"></label>
