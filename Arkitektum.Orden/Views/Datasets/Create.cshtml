            </div>
            <div class="form-group">
                <label asp-for="PublishedToSharedDataCatalog" class="control-label"></label>
                <input asp-for="PublishedToSharedDataCatalog" class="form-control" />
                <span asp-validation-for="PublishedToSharedDataCatalog" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

