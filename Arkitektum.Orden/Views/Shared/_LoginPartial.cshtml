@using Arkitektum.Orden.Services

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ISecurityHelper SecurityHelper

<div class="navbar-account">
    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@UserManager.GetUserName(User)</a>
        <form asp-controller="Account" asp-action="ChangeCurrentOrganization" class="form-inline">
            <div class="select-container form-group">
                <select name="organizationId" class="form-control" onchange="this.form.submit()">
                    @{
                        var currentOrganization = SecurityHelper.GetCurrentOrganization();
                    }
                    @if (currentOrganization != null)
                    {
                        <option value="@currentOrganization.Id" selected="selected">@currentOrganization.Name</option>

                        foreach (var org in currentOrganization.AvailableOrganizations)
                        {
                            <option value="@org.Id">@org.Name</option>
                        }
                    }
                </select>
            </div>
        </form>
        <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
            <button type="submit" class="btn btn-default navbar-btn navbar-link">Logg ut</button>
        </form>
    }
    else
    {
        <a asp-controller="Account" asp-action="Login" class="btn btn-default navbar-btn navbar-link">Logg inn</a>
    }
</div>