@using Arkitektum.Orden.Controllers
@using Microsoft.AspNetCore.Identity
@using Arkitektum.Orden.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hei @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                Din organisasjon:
                <form asp-controller="Account" asp-action="ChangeCurrentOrganization">
                    <div class="form-group">
                        <select name="organizationId" class="form-control">
                            @{
                                var currentOrganization = new SessionHelper().GetCurrentOrganization(Context.Session);
                            }
                            @if (currentOrganization != null)
                            {
                                <option value="@currentOrganization.Id" selected="selected">@currentOrganization.Name</option>

                                foreach (var org in currentOrganization.AvailableOrganizations)
                                {
                                    <option value="@org.Id">@org.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn navbar-btn navbar-link">Bytt organisasjon</button>
                    </div>
                </form>
            </li>
            <li>
                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                    <button type="submit" class="btn btn-link navbar-btn navbar-link">Logg ut</button>
                </form>
            </li>
        </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Logg inn</a></li>
    </ul>
}
