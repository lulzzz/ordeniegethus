@using Arkitektum.Orden.Controllers
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Orden i eget hus</title>
    <base href="~/" />

    <link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true" />
    <environment include="Development">
        <link rel="stylesheet" href="~/dist/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/dist/site.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/dist/site.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-toggleable-md navbar-inverse">
        <div class="navbar-left">
            <button type="button" class="navbar-toggler navbar-toggler-right" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Orden i eget hus</a>
        </div>
        <div class="navbar-center">
            <div class="navbar-search-container">
                <input type="text" />
            </div>
        </div>
        <div class="navbar-right">
            @await Html.PartialAsync("_LoginPartial")
        </div>
    </nav>


    @if (SignInManager.IsSignedIn(User))
    {
        <div class="main-navigation navbar-collapse collapse">
            <div class="main-navigation-content">
                <ul class="navbar-nav mr-auto">
                    @if (User.IsInRole(Roles.Admin))
                    {
                        <li class="nav-item"><a asp-area="" asp-controller="Organizations" asp-action="Index" class="nav-link">@ModelsResource.Organizations</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="NationalComponents" asp-action="Index" class="nav-link">@ModelsResource.NationalComponents</a></li>
                    }
                    <li class="nav-item"><a asp-area="" asp-controller="Applications" asp-action="Index" class="nav-link">@ModelsResource.Applications</a></li>
                    <li class="nav-item"><a asp-area="" asp-controller="Sectors" asp-action="Index" class="nav-link">@ModelsResource.Sectors</a></li>
                    <li class="nav-item"><a asp-area="" asp-controller="Datasets" asp-action="Index" class="nav-link">@ModelsResource.Datasets</a></li>
                    <li class="nav-item"><a asp-area="" asp-controller="Users" asp-action="Index" class="nav-link">Brukere</a></li>
                </ul>
            </div>
        </div>
    }



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - Orden i eget hus i praksis</p>
        </footer>
    </div>
    <environment include="Development">
        <!--<script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script> -->
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <!--<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>-->
        <script src="~/dist/site.min.js" asp-append-version="true"></script>
    </environment>
    <script src="~/dist/vendor.js" asp-append-version="true"></script>
    <script src="~/dist/main.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>